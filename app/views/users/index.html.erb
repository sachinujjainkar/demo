<p id="notice"><%= notice %></p>

 
<h1>Users</h1>

<table class="table border">
 <thead class="thead-dark">
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Contact</th>
      <th>Birthdate</th>
      <th>Password</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.contact %></td>
        <td><%= user.birthdate %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.admin%></td>
        
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-zoom-in"), user %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-pencil", :style =>"color:blue"), edit_user_path(user) %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-trash", :style =>"color:red"), user,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New User', new_user_path %>
