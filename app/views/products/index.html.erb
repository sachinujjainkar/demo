<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="search">
  <%= form_tag products_path, :method => 'get', :id => "products_search" do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
    <div id="products"><%= render 'products' %></div>
    <% end %>
</div>  

<!-- if user is admin then able to add new products -->

<div>
  <% if logged_in? && current_user.admin? %> 
    <div align=right>
      <%= link_to 'New Product', new_product_path, class:'btn btn-primary btn-lg ' %>
    </div>
  <%end%>
</div>
<hr>
<table class="table table-bordered">
<thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Sku</th>
      <th>Quantity</th>
      <th>Currency</th>
      <th>Price</th>
      <th>Images</th>
      <th>Inbox</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.sku %></td>
        <td><%= product.quantity %></td>
        <td><%= product.currency %></td>
        <td><%= product.price %></td>
        <td><%= image_tag(product.images,:size=>'50x50') %></td>
        <td><%= product.inbox %></td>
        <td><%= link_to 'Show', product %></td>
        <!-- if admin then only able to edit and destroy products -->
        <% if logged_in? && current_user.admin? %> 
               <td><%= link_to 'Edit', edit_product_path(product) %></td> 
              <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- for the link for more pages-->
<div align=center>
  <%= will_paginate @product, class:'pagination justify-content-center'%>
</div>