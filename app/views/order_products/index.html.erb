<p id="notice"><%= notice %></p>


<h1>Order Products</h1>
<hr>


<table class="table table-bordered">
<thead class="thead-dark">
    <tr>
      <th>Quntity</th>
      <th>Product</th>
      <th>Order</th>
      <th>Price</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <td><%= order_product.quntity %></td>
        <td><%= order_product.product.name %></td>
        <td><%= order_product.order.id %></td>
        <td><%= order_product.total %> </td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-zoom-in"), order_product %></td>
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-pencil", :style =>"color:blue"), edit_order_product_path(order_product) %></td> 
        <td><%= link_to content_tag(:span, "",:class => "glyphicon glyphicon-trash", :style =>"color:red"), order_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- for the link for more pages-->
<div align=center>
  <%= will_paginate @order_product, class:'pagination justify-content-center'%>
</div>

<%= link_to 'New Order Product', new_order_product_path %>
